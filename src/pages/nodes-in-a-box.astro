    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .community-item {
    padding: 1rem;
    background: var(--color-card-muted);
    border-radius: 4px;
    text-align: center;
    border-left: 3px solid #f7931a;
    color: var(--color-text);
  }

  .community-quote {
    font-style: italic;
    text-align: center;
    margin: 2rem 0;
    padding: 1rem;
    background: var(--color-card-muted);
    border-radius: 4px;
    color: var(--color-text);
  }

  /* All tiers include - Dark mode compatible */
  .all-tiers-include {
    margin-top: 2rem;
