---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";

const pageTitle = "Nodes in a Box - Pre-configured Bitcoin & Lightning Nodes";
const pageDesc = "Plug-and-play Bitcoin sovereignty for Malaysia & Southeast Asia. Pre-configured hardware with Bitcoin Core, Lightning Network, and optional AI integration. Built in Malaysia, paid in sats.";
