    border-radius: 4px;
  }

  /* AI content layout */
  .ai-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  /* Links */
  a {
    color: #f7931a;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* White text links in colored sections */
  .why-malaysia a,
  .ai-integration a,
  .launch-offer a,
  .final-cta a {
    color: white;
  }

  .why-malaysia a:hover,
  .ai-integration a:hover,
  .launch-offer a:hover,
