    margin: 1.5rem 0;
  }

  .contact-item,
  .payment-item {
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    text-align: center;
  }

  .payment-item.bitcoin {
    border: 2px solid #f7931a;
  }

  /* Typography */
  .discount {
    color: #f7931a;
    font-weight: bold;
  }

  .section-intro {
    color: var(--color-text-muted);
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .problem-note {
    color: #e74c3c;
    font-style: italic;
    margin-top: 1rem;
  }

  .solution-hint {
    color: #27ae60;
    font-weight: bold;
    margin-top: 1rem;
  }

  .tier-for {
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .community-welcome {
    color: var(--color-text);
    text-align: center;
    margin-top: 2rem;
  }

  .brand-tagline {
    text-align: center;
    margin-top: 2rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  code {
