  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-primary,
    .cta-secondary {
      width: 100%;
      max-width: 250px;
    }
    
    .use-case-row {
      grid-template-columns: 1fr;
    }
    
    .tiers-grid {
      grid-template-columns: 1fr;
    }
    
    .tier-card.featured {
      border-width: 1px;
    }
    
    .ai-content {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .community-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode specific overrides */
  @media (prefers-color-scheme: dark) {
    .problem-card,
    .solution-card,
    .tier-card,
