<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Hero Section */
  .hero {
    background: #f7931a;
    color: white;
    padding: 3rem 0;
    text-align: center;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero-quote {
    font-style: italic;
    margin-bottom: 2rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .cta-primary, .cta-secondary {
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
  }

  .cta-primary {
    background: white;
    color: #f7931a;
  }

  .cta-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  /* Sections */
  section {
    padding: 2rem 0;
  }

  section h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  /* Grids */
  .problem-grid,
  .solution-grid,
  .malaysia-grid,
  .tiers-grid {
    display: grid;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .solution-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .tiers-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  /* Cards - Dark mode compatible */
  .problem-card,
  .solution-card,
  .tier-card {
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    background: var(--color-fill);
    color: var(--color-text);
  }

  .malaysia-card {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: white;
  }

  .tier-card {
    text-align: center;
    position: relative;
  }

  .tier-card.featured {
    border-color: #f7931a;
    border-width: 2px;
  }

  .popular-badge {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    background: #f7931a;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.8rem;
  }

  .tier-price {
    font-size: 1.5rem;
    font-weight: bold;
    color: #f7931a;
    margin: 1rem 0;
  }

  .tier-cta {
    background: #f7931a;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
    margin-top: 1rem;
  }

  /* Special sections */
  .why-malaysia {
    background: #dc143c;
    color: white;
  }

  .ai-integration {
    background: #667eea;
    color: white;
  }

  .launch-offer {
    background: #27ae60;
    color: white;
  }

  .final-cta {
    background: #2c3e50;
    color: white;
  }

  /* Use cases table - Dark mode compatible */
  .use-case-row {
    display: grid;
    grid-template-columns: 150px 1fr;
    gap: 1rem;
    padding: 1rem;
    margin-bottom: 0.5rem;
    background: var(--color-fill);
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .use-case-group {
    font-weight: bold;
    color: #3498db;
  }

  .use-case-desc {
    color: var(--color-text);
  }

  /* Offer grid */
  .offer-grid {
    display: grid;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .offer-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  /* Community - Dark mode compatible */
  .community {
    background: var(--color-fill);
  }

